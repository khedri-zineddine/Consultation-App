<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView18">

    <TextView
        android:id="@+id/medicamentName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="dasdsa"
        android:textColor="@color/black_trans"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeUse"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="dsa dsa"
        android:textColor="@color/black_trans"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/medicamentName"
        app:layout_constraintStart_toEndOf="@+id/medicamentName"
        app:layout_constraintTop_toTopOf="@+id/medicamentName" />

    <TextView
        android:id="@+id/qauntity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Quantity"
        android:textColor="@color/black_trans"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/medicamentName"
        app:layout_constraintStart_toEndOf="@+id/timeUse"
        app:layout_constraintTop_toTopOf="@+id/medicamentName" />

</androidx.constraintlayout.widget.ConstraintLayout>